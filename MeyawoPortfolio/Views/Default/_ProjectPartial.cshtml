@model List<MeyawoPortfolio.Models.TblProject>

<section class="section" id="portfolio">
    <div class="container text-center">
        <p class="section-subtitle">Neler Yaptım?</p>
        <h6 class="section-title mb-6">Portfolyom</h6>
        <!-- row -->
        
        <div class="row">
            @foreach (var x in Model)
            {
                <div class="col-md-4">
                    <a href="@x.ProjectUrl" class="portfolio-card">
                        <img src="@x.ImageUrl" class="portfolio-card-img">
                        <span class="portfolio-card-overlay">
                            <span class="portfolio-card-caption">
                                <h4>
                                    @x.Title
                                </h4>
                                <p class="font-weight-normal">@x.Description</p>
                            </span>
                        </span>
                    </a>
                </div>
            }
            </div>
        
    <!-- end of row -->
    </div><!-- end of container -->
</section>
