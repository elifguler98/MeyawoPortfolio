@model MeyawoPortfolio.Models.TblContact
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@Html.Partial("/Views/Default/_HeadPartial.cshtml")

<body data-spy="scroll" data-target=".navbar" data-offset="40" id="home">

    <!-- Page Navbar -->
    @Html.Partial("/Views/Default/_NavbarPartial.cshtml")
    <!-- End of Page Navbar -->
    <!-- page header -->
    @Html.Action("_FeaturePartial")
    <!-- end of page header -->
    <!-- about section -->
    @Html.Action("_AboutPartial")
    <!-- end of about section -->
    <!-- service section -->
    @Html.Action("_ServicePartial")
    <!-- end of service section -->
    <!-- portfolio section -->
    @Html.Action("_ProjectPartial")
    <!-- end of portfolio section -->
    <!-- section -->
    @Html.Action("_JobPartial")
    <!-- end of section -->
    <!-- testimonial section -->
    @Html.Action("_TestimonialPartial")
    <!-- end of testimonial section -->
    <!-- contact section -->
    <section class="section" id="contact">
        <div class="container text-center">
           
            <h6 class="section-title mb-5">Benimle İletişime Geçin.</h6>
            <!-- contact form -->
            <form action="" class="contact-form col-md-10 col-lg-8 m-auto" method="post">
                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <input type="text" size="50" class="form-control" placeholder="Adınız Soyadınız" name="NameSurname" required>
                    </div>
                    <div class="form-group col-sm-6">
                        <input type="email" class="form-control" placeholder="E Posta Hesabınız" name="Email"requried>
                    </div>
                    <div class="form-group col-sm-12">
                        <textarea name="Message" id="comment" rows="6" class="form-control"
                                  placeholder="Mesajınız..."></textarea>
                    </div>
                    <div class="form-group col-sm-12 mt-3">
                        <input type="submit" value="Gönder" class="btn btn-outline-primary rounded">
                    </div>
                </div>
            </form><!-- end of contact form -->
        </div><!-- end of container -->
    </section><!-- end of contact section -->
    <!-- footer -->
    @Html.Action("_FooterPartial")
    <!-- end of page footer -->
    <!-- core  -->
    @Html.Action("_ScriptPartial")

</body>

</html>
