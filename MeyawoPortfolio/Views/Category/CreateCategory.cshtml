@model MeyawoPortfolio.Models.TblCategory
@{
    ViewBag.Title = "CreateCategory";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}
<br />
<h2 style="text-align:center">Yeni Kategori Ekleme Sayfası</h2>
<br />

<form class="form-group" method="post">
   
    @Html.LabelFor(x => x.CategoryName)
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "table table-bordered" })
            
       
    <button class="btn btn-outline-primary">Kaydet</button>
</form>
<br />
<br />
<a href="/Category/Index/" class="btn btn-outline-primary">Kategoriler</a>
